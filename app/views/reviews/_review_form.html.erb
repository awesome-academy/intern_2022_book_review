<%= form_for @review do |f| %>
  <div class="field" id="rating-star-container">
    <%= make_star_rating(@review.rating || 0).html_safe %>
  </div>
  <div class="field">
    <%= f.text_area :content, placeholder: t("reviews.compose_new_review"),
                    class: "nunito" %>
  </div>
  <%= f.hidden_field :rating %>
  <%= hidden_field_tag :create_review_action, stars_path %>
  <%= f.hidden_field :book_id, value: @book.id if @book %>
  <%= f.submit button_text, class: "btn btn-primary my-button" %>
<% end %>
